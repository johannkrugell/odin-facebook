<!-- Sidebar -->
<div class="grid grid-rows-5 gap-y-5 overflow-y-auto bg-slate-100 ml-28 pt-5">
  <nav>
    <ul role="list" class="gap-y-5">
      <li>
        <ul role="list" class="-mx-1 space-y-1">
          <!-- Friend Requests -->
          <li class="p-2 w-60 h-14">
            <button class="rounded-md p-2 self-center w-48 text-gray-800", 
                    data-action="click->friendship#toggleSection" data-friendship-target="desktoprequestsButton" >
              <div class="grid grid-cols-6">
                <%= render partial: 'shared/friend_request_icon' , 
                    class:"col-start-1 col-end-1 justify-self-center", locals: { svg_class: "svg-icon" } %>
              <div class="col-start-3 col-end-6 text-sm font-semibold 
                          gap-x-1 self-center justify-self-start">Requests</div> 
            </button>
          </li>
          <!-- Your Friends -->
          <li class="p-2 w-60 h-14">
            <button class="rounded-md p-2 self-center w-48 text-white bg-sky-500"
                    data-action="click->friendship#toggleSection" data-friendship-target="desktopfriendsButton">
              <div class="grid grid-cols-6">
                <%= render partial: 'shared/friends_icon' , 
                    class:"col-start-1 col-end-1 self-center", locals: { svg_class: "svg-icon" } %>
                <div class="col-start-3 col-end-6 text-sm font-semibold hover:text-sky-600
                            gap-x-1 self-center justify-self-start">Friends</div> 
              </div>
            </button>
          </li>
          <!-- Friends Suggestions -->
          <li class="p-2 w-60 h-14">
            <button class="rounded-md p-2 self-center w-48 text-gray-800"
                    data-action="click->friendship#toggleSection" data-friendship-target="desktopsuggestionsButton">
              <div class="grid grid-cols-6">
                <%= render partial: 'shared/friends_suggestions',
                    
                    class:"col-start-1 col-end-1 justify-self-center",  locals: { svg_class: "svg-icon" } %>
                <span class="col-start-3 col-end-6 text-sm font-semibold 
                            gap-x-1 self-center justify-self-start">Suggestions</span>
              </div>
            </button>
          </li>
        </ul>  
      </li>    
    </ul>
  </nav>
</div>
