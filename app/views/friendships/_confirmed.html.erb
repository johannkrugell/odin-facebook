<%# People who are your friends %>
<h2 class="container mx-auto px-5 pb-2 pt-5 justify-center text-center font-semibold w-3/4">Your Friends</h2>
<ul class="lg:pt-5">
  <li>
      <% @approved_followers.each do |friend|%>
        <div class="container mx-auto px-5 justify-center ">
          <!-- Friend Container -->
          <div class="border-b border-gray-200 bg-white px-4 py-5 sm:px-6">
              <div class="grid grid-cols-4">
                <!-- Friend name -->
                <%= image_tag gravatar_for(friend.follower), alt: friend.follower, 
                    class: "mx-auto h-14 w-auto rounded-full col-start-1 col-end-1 
                            self-center border-gray-300 border-2" %>
                <h3 class="col-start-2 col-end-3 text-base 
                           leading-6 text-gray-700 self-center"><%= friend.follower.username %></h3>
                <!-- Remove friend button -->
                <div class="col-start-4 col-end-4 self-center">
                <%= button_to 'Remove', decline_friendship_path(friend), :method => :delete,
                class: "rounded-lg bg-gray-300 px-2.5 py-2 text-xs font-semibold
                            text-gray-800 shadow-sm hover:bg-gray-500 focus-visible:outline 
                            focus-visible:outline-2 focus-visible:outline-offset-2 
                            focus-visible:outline-gray-600" %>
                </div>
              </div>
          </div>
        </div>
      <% end %>
  </li>
</ul>