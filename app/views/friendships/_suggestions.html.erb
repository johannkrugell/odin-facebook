<%# User card for suggested friends %>
<h2 class="container mx-auto px-5 pb-2 pt-5 justify-center text-center font-semibold w-3/4">People you might know</h2>
<div class="lg:min-h-screen lg:bg-slate-100 lg:flex lg:justify-center">
  <div class="bg-slate-100 lg:pt-5 lg:min-h-screen lg:bg-slate-100 lg:flex lg:justify-center">
    <ul>
      <li>
          <% @users.each.each do |user|%>
            <div class="container mx-auto px-5 justify-center ">
              <!-- Friend Container -->
              <div class="border-b border-gray-200 bg-white px-4 py-5 sm:px-6">
                  <div class="grid grid-cols-4">
                    <% unless current_user == user || current_user.following.include?(user) %>
                      <!-- Friend name -->
                      <%= image_tag gravatar_for(user), alt: user.username, 
                          class: "mx-auto h-14 w-auto rounded-full col-start-1 col-end-1 
                                  self-center border-gray-300 border-2" %>
                      <h3 class="col-start-2 col-end-3 text-base 
                                leading-6 text-gray-700 self-center"><%= user.username %></h3>
                      <!-- Suggested friends button -->
                      <div class="col-start-4 col-end-4 self-center">
                      <%= button_to 'Request Friendship', friendships_path(followed_id: user.id), :method => :post,
                        class: "rounded-lg bg-sky-700 px-2.5 py-2 text-xs font-semibold
                                    text-white shadow-sm hover:bg-gray-500 focus-visible:outline 
                                    focus-visible:outline-2 focus-visible:outline-offset-2 
                                    focus-visible:outline-gray-600" %>
                      </div>
                    <% end %>    
                  </div>
              </div>
            </div>
          <% end %>
      </li>
    </ul>
  </div>
</div>