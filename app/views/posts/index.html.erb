<div class="bg-slate-100">
  <!-- Navbar -->
  <div class="fixed top-0 z-30 w-full">
    <%= render "shared/navbar" %>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-6 gap-4 pt-3 lg:pt-8">
    <!-- Sidebar -->
    <div class="hidden lg:block lg:col-span-2 lg:pt-8">
      <%= render "shared/sidebar" %>
    </div>

    <!-- Content Area: Form and Posts -->
    <div class="lg:col-span-2 px-4 py-4 ">
    
      <%# New post form %>
      <div class="mb-4 lg:self-center">
        <%= render 'form', new_post: @new_post %>
      </div>
   
      <%# Index of posts %>
      <%= render 'posts/posts_index', posts: @posts %>
    </div>    
  </div>    
</div>